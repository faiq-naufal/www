{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@config": ["src/config.ts"],
      "@components/*": ["src/components/*"],
      "@modules/*": ["src/modules/*"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*", ".vscode", "dist"]
}
